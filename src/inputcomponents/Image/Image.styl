.image {
  &__label {
    line-height: 22px;
    font-size: 12px;
    user-select: none;
    color: rgba(0, 0, 0, 0.3);
  }
  &__body {
    margin-top: 20px;
    background: rgba(68, 138, 255, 0.1);
    padding: 20px;
    width: 400px;
    border: 1px dotted rgba(68, 138, 255, 0.5);
    border-radius: 2px;
    color: rgba(0,0,0,0.5);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  &__text {
    margin-bottom: 20px;
    text-align: center;
  }
  &__button {
  }
  &__image {
    display: inline-block;
    max-width: 160px;
  }
  margin-bottom: 30px;
}
