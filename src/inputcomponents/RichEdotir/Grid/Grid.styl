.grid {
  padding: 20px;
  border: 1px solid rgba(0,0,0, 0.2);
  &__colums {
    display: flex;
    flex-wrap: wrap;
  }
  &__col {
    position: relative;

    &_size_1 {
      width: 8.33%;
    }

    &_size_2 {
      width: 16.66%;
    }

    &_size_3 {
      width: 25%;
    }

    &_size_4 {
      width: 33.33%;
    }

    &_size_5 {
      width: 41.66%;
    }

    &_size_6 {
      width: 50%;
    }

    &_size_7 {
      width: 58.33%;
    }

    &_size_8 {
      width: 66.66%;
    }

    &_size_9 {
      width: 75%;
    }

    &_size_10 {
      width: 83.3%;
    }

    &_size_11 {
      width: 91.66%;
    }

    &_size_12 {
      width: 100%;
    }
  }
  &__controls {
    position: absolute;
    top: 0;
    right: 0;
  }
}
